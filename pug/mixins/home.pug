            li.wrapper-icon-title__item .
            li.wrapper-icon-title__item .
        a(href="" class!=attributes.class).wrapper-icon-title__link= value

mixin group-slider(values)
    .slider__block
        !=values.icon
        .slider__content
            p.slider__block-title= values.title
            p.slider__block-description= values.description


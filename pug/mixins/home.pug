mixin block-items-drop-down(values)
    .block
        img(src=values.img, class="block__img" alt="img")
        .content
            h3.block__title= values.title
            p.block__quality= `${values.quality} x` 
            p.block__price= `${values.price} Đ`
        .block__icon-close
            a(href="" class="block__icon-link")
                i(class="fas fa-times")


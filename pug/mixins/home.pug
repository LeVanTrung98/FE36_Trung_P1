// list item in submenu 
mixin list-item(value)
    li.sub-menu__list-item(class!= attributes.class)
        i(class="fas fa-caret-right")
        a(href="" class="sub-menu__list-link menu__list-link")= value
// submenu
mixin list-link(values)
    ul.sub-menu.sub-menu--format.sub-menu--disable
        each value in values
            +list-item(value)(class!= attributes.class)
// submenu
mixin submenu(values)
    ul.sub-menu.sub-menu--disable
        each value, index in values
            if value
                li.sub-menu__list-item(class!= attributes.class)
                    i(class="fas fa-caret-right")
                    a(href="" class="sub-menu__list-link menu__list-link")= index
                    +list-link(value)(class!= attributes.class)
            else
                +list-item(index)(class!= attributes.class)

